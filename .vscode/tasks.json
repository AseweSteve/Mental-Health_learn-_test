{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    
        "version": "2.0.0",
        "tasks": [
            {
                "label": "Run Flask App",
                "type": "shell",
                "command": "pythong",
                "args": [
                    "-m",
                    "flask",
                    "run"
                ],
                "problemMatcher": [],
                "options": {
                    "env": {
                        "FLASK_APP": "app.py",
                        "FLASK_ENV": "development"
                    }
                },
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            }
        ]
    }
    